# Build stage
FROM golang:1.25-alpine AS builder
WORKDIR /workspace
COPY bin/agent .

# Final stage
FROM alpine:3.19
WORKDIR /workspace
COPY --from=builder /workspace/agent .

# Default envs; can be overridden by Pod spec
ENV AGENT_PORT=":8081"
ENV RUNTIME_TYPE="container"
ENV RUNTIME_SOCKET="/run/containerd/containerd.sock"

EXPOSE 8081
ENTRYPOINT ["./agent"]
